defaults.pcm.rate_converter "speexrate_best"

pcm.!default {
        type plug
        slave.pcm "duplex"
}

pcm.duplex {
        type asym
        playback.pcm "dmixed"
        capture.pcm "dsnooper"
}

pcm.dmixed {
        type dmix
        ipc_key 6969
        slave {
              pcm "hw:AUDIO"
              format S32_LE
              rate 48000
        }
}

pcm.dsp {
        type ladspa
        path "/usr/lib/ladspa/"
        plugins [{
                label ladspa_dsp
        }]
        slave.pcm {
                  type plug
                  slave.pcm {
                            type dmix
                            ipc_key 6969
                            slave {
                                  pcm "hw:AUDIO"
                                  format S32_LE
                                  rate 48000
                            }
                  }
        }
}

pcm.dsnooper {
        type dsnoop
        ipc_key 9696
        slave.pcm "hw:U0x46d0x81b"
}
